<div class="row">
  <h3>Add a new Completion</h3>
  <form method="post" action="/create" class="form-horizontal">
    <div class="form-group">
      <label for="uwi" class="col-sm-2 control-label">UWI:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="uwi" id="uwi"/>
      </div>
    </div>
    <div class="form-group">
      <label for="licenseNo" class="col-sm-2 control-label">License No:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="licenseNo" id="licenseNo"/>
      </div>
    </div>
    <div class="form-group">
      <label for="province" class="col-sm-2 control-label">Province:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="province" id="province"/>
      </div>
    </div>
    <button type="submit" class="btn btn-primary col-sm-offset-11 col-sm-1">Add</button>
  </form>
</div>
